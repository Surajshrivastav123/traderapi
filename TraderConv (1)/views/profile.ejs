  <script>
    async function fetchAndPopulateSpeakerData() {
      try {
        // Extract the ID from the URL parameters
        const pathArray = window.location.pathname.split('/');
        const speakerId = pathArray[pathArray.length - 1]; // This will get the last part of the URL, which is the ID
            
        // Fetch speaker data using the extracted ID
        const response = await fetch(`https://backend.gaganahuja.com/api/v1/speakers/${speakerId}`);
        const speaker = await response.json();
        console.log("speaker", speaker);

        // Modify the image URL to extract the file path
        const fullImagePath = speaker.img;

        // Split the full path by '/' and get the last part (the image file name)
        const imageName = fullImagePath.split('/').pop(); 
        console.log("imageName:", imageName); // This will log 'image-1725941547966-707892456.png'

        // Construct the full URL to display the image
        const imageUrl = `https://backend.gaganahuja.com/uploads/${imageName}`;
        console.log("imageUrl:", imageUrl); // Log the full URL

        document.querySelector('.profile-top img').src = imageUrl;
        document.querySelector('.user em').textContent = speaker.name;
        document.querySelector('.phone').textContent = `Phone: ${speaker.phone}`;
        document.querySelector('.subtitle').textContent = speaker.registeredAt;

        const socialLinks = document.querySelectorAll('.social em a');
        socialLinks[0].href = speaker.youTubeLink;
        socialLinks[1].href = speaker.instagramLink;
        socialLinks[2].href = speaker.TwitterLink;
        socialLinks[3].href = speaker.LinkedinLink;

        document.querySelector('.biography').innerHTML = speaker.BioGraphy;
      } catch (error) {
        console.error('Error fetching speaker data:', error);
      }
    }

    // Call the function when the page loads
    window.addEventListener('load', fetchAndPopulateSpeakerData);
</script>
<script>
  document.getElementById('submitQuery').addEventListener('click', async function () {
    // Gather form data
    const email = document.getElementById('emailInput').value;
    const name = document.getElementById('nameInput').value;
    const designation = document.getElementById('designationInput').value;
    const contact = document.getElementById('contactInput').value;
    const website = document.getElementById('websiteInput').value;
    const companyName = document.getElementById('companyNameInput').value;

    // Create the query object
    const queryData = {
      name: name,
      Designation: designation,
      companyName: companyName,
      Contact: contact,
      email: email,
      website: website
    };

    try {
      // Send POST request to API
      const response = await fetch('https://backend.gaganahuja.com/api/v1/queries', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(queryData)
      });

      // Parse response
      const result = await response.json();
      console.log(result);

      // Check if the query was created successfully
      if (response.ok) {
        alert('Query created successfully!');

        // Clear form fields after successful submission
        document.getElementById('emailInput').value = '';
        document.getElementById('nameInput').value = '';
        document.getElementById('designationInput').value = '';
        document.getElementById('contactInput').value = '';
        document.getElementById('websiteInput').value = '';
        document.getElementById('companyNameInput').value = '';
      } else {
        alert('Error creating query. Please try again.');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error creating query. Please try again.');
    }
  });
</script>

