  <script>
    document.getElementById('submitQuery').addEventListener('click', async function () {
      // Gather form data
      const email = document.getElementById('emailInput').value;
      const name = document.getElementById('nameInput').value;
      const designation = document.getElementById('designationInput').value;
      const contact = document.getElementById('contactInput').value;
      const website = document.getElementById('websiteInput').value;
      const companyName = document.getElementById('companyNameInput').value;

      // Create the query object
      const queryData = {
        name: name,
        Designation: designation,
        companyName: companyName,
        Contact: contact,
        email: email,
        website: website
      };

      try {
        // Send POST request to API
        const response = await fetch('https://backend.gaganahuja.com/api/v1/queries', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(queryData)
        });

        // Parse response
        const result = await response.json();
        console.log(result);

        // Check if the query was created successfully
        if (response.ok) {
          alert('Query created successfully!');

          // Clear form fields after successful submission
          document.getElementById('emailInput').value = '';
          document.getElementById('nameInput').value = '';
          document.getElementById('designationInput').value = '';
          document.getElementById('contactInput').value = '';
          document.getElementById('websiteInput').value = '';
          document.getElementById('companyNameInput').value = '';
        } else {
          alert('Error creating query. Please try again.');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error creating query. Please try again.');
      }
    });
  </script>
  <script>
    // Fetch venues from API
    async function fetchVenues() {
      try {
        const response = await fetch('https://backend.gaganahuja.com/api/v1/eventVenue', { timeout: 5000 });
        const venues = await response.json();
        const venueDataElement = document.getElementById('venue-data');

        let venueRows = '';
        venues.forEach(event => {
          venueRows += `
            <tr>
              <td data-label="Date">${new Date(event.date).toLocaleDateString()}</td>
              <td data-label="City">${event.city}</td>
              <td data-label="Place">${event.place}</td>
              <td data-label="Event">${event.eventMasterItem.title}</td>
              <td data-label="Location Link">
                <a href="#" class="location-map-link" data-map="${event.map}">Location Map</a>
              </td>
            </tr>
          `;
        });

        // Inject the rows into the table body
        venueDataElement.innerHTML = venueRows;

    

        // Add event listeners to each "Location Map" link
        document.querySelectorAll('.location-map-link').forEach(link => {
          link.addEventListener('click', function (e) {
            e.preventDefault();
            const mapUrl = this.getAttribute('data-map');
            document.getElementById('map-frame').src = mapUrl;
          });
        });

        // Set the initial map to the last venue's map
        if (venues.length > 0) {
          document.getElementById('map-frame').src = venues[venues.length - 1].map;
        }
        if (venues.length > 0) {
          const latestVenue = venues[0];
          document.getElementById('latest-venue-banner-desktop').src = latestVenue.img;
          document.getElementById('latest-venue-banner-mobile').src = latestVenue.img;
        }
      } catch (error) {
        console.error('Error fetching venues:', error.message);
      }
    }

    // Call the function to fetch and display the venues
    fetchVenues();
  </script>

