    <script>
      // Fetch the pricing data from the backend API
      fetch('https://backend.gaganahuja.com/api/v1/eventPricing')
        .then((response) => response.json())
        .then((data) => {
          const pricingContainer = document.getElementById('pricing-cards');

          // Loop over each pricing plan and create card HTML
          data.forEach((plan) => {
            // const offerings = plan.offerings.map(offering => `
            //   <div class="d-flex align-items-center offering-item">
            //     <i class="icon_check_alt2 pink-icon "></i>
            //     <div class="item">${offering.description}</div>
            //   </div>
            // `).join('');
            const offerings = plan.offerings
              .map(
                (offering) => `
  <div class="item"> <i class="icon_check_alt2"></i>
    ${offering.description}
  </div>
`
              )
              .join('');
            const slotsText = plan.slots ? `First ${plan.slots} Slots` : ''; // Only display if plan.slots exists

            const priceCard = `
                  <div class="col-xl-4 col-md-4">
                      <div class="price-card">
                          <div class="price-plan">
                              <div class="contents shape1 circle1">
                                  <div class="plan-type">${plan.titleTop}</div>
                                  <div class="price shapeTwo shapethree">${
                                    plan.title
                                  }</div>
                              </div>
                          </div>
                          <div class="price-details">
                              ${offerings}
                              <div class="item">
                                 <i class="icon_check_alt2"></i>  <strong class="highlight-price">Current Price: ${
                                   plan.price
                                 }/-</strong>${slotsText}
                              </div>
                              <button class="price-btn">
                               ${
                                 plan.paymentLink
                                   ? `<a href="${plan.paymentLink}" >Buy Now</a>`
                                   : `<a href='https://traderconvention.gaganahuja.com/register/${plan._id}'>BOOK NOW</a>`
                               }
                              </button>
                          </div>
                      </div>
                  </div>
              `;
            // Append each price card to the container
            pricingContainer.insertAdjacentHTML('beforeend', priceCard);
          });
        })
        .catch((error) => {
          console.error('Error fetching pricing data:', error);
        });
    </script>
    <script>
      document
        .getElementById('submitQuery')
        .addEventListener('click', async function () {
          // Gather form data
          const email = document.getElementById('emailInput').value;
          const name = document.getElementById('nameInput').value;
          const designation = document.getElementById('designationInput').value;
          const contact = document.getElementById('contactInput').value;
          const website = document.getElementById('websiteInput').value;
          const companyName = document.getElementById('companyNameInput').value;

          // Create the query object
          const queryData = {
            name: name,
            Designation: designation,
            companyName: companyName,
            Contact: contact,
            email: email,
            website: website,
          };

          try {
            // Send POST request to API
            const response = await fetch(
              'https://backend.gaganahuja.com/api/v1/queries',
              {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify(queryData),
              }
            );

            // Parse response
            const result = await response.json();
            console.log(result);

            // Check if the query was created successfully
            if (response.ok) {
              alert('Query created successfully!');

              // Clear form fields after successful submission
              document.getElementById('emailInput').value = '';
              document.getElementById('nameInput').value = '';
              document.getElementById('designationInput').value = '';
              document.getElementById('contactInput').value = '';
              document.getElementById('websiteInput').value = '';
              document.getElementById('companyNameInput').value = '';
            } else {
              alert('Error creating query. Please try again.');
            }
          } catch (error) {
            console.error('Error:', error);
            alert('Error creating query. Please try again.');
          }
        });
    </script>
    <script>
      // Fetch the nav data from the API
      fetch('https://backend.gaganahuja.com/api/v1/navigation')
        .then((response) => response.json())
        .then((data) => {
          const navMenu = document.getElementById('nav-menu');

          // Iterate through the array of nav items
          data.forEach((item) => {
            if (item.isActive) {
              // Render only active items
              const listItem = document.createElement('li');
              const anchor = document.createElement('a');
              anchor.href = item.path; // Set the path
              anchor.textContent = item.label; // Set the label as text

              listItem.appendChild(anchor);
              navMenu.appendChild(listItem);
            }
          });
        })
        .catch((error) => {
          console.error('Error fetching navigation data:', error);
        });
    </script>
