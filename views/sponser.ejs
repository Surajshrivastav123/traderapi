    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Function to fetch sponsor data
        async function fetchSponsors() {
          try {
            const response = await fetch(
              'https://backend.gaganahuja.com/api/v1/sponser/get'
            );
            if (!response.ok) throw new Error('Network response was not ok');
            const sponsors = await response.json();
            renderSponsors(sponsors);
          } catch (error) {
            console.error('Error fetching sponsors:', error);
          }
        }

        // Function to render sponsors
        function renderSponsors(sponsors) {
          const section1Container = document.getElementById('section-1');
          const section2Container = document.getElementById('section-2');

          sponsors.forEach((sponsor) => {
            if (sponsor.isActive) {
              const sponsorElement = `
              <div class="sponsors-logo">
                <a href="${sponsor.link}" target="_blank" title="${sponsor.title}">
                  <img src="https://backend.gaganahuja.com/${sponsor.image}" alt="${sponsor.title}">
                </a>
              </div>
            `;

              if (sponsor.category === 'section 1') {
                section1Container.innerHTML += sponsorElement;
              } else if (sponsor.category === 'section 2') {
                section2Container.innerHTML += sponsorElement;
              }
            }
          });
        }

        // Fetch and render sponsors on page load
        fetchSponsors();
      });
    </script>
    <script>
      document
        .getElementById('submitQuery')
        .addEventListener('click', async function () {
          // Gather form data
          const email = document.getElementById('emailInput').value;
          const name = document.getElementById('nameInput').value;
          const designation = document.getElementById('designationInput').value;
          const contact = document.getElementById('contactInput').value;
          const website = document.getElementById('websiteInput').value;
          const companyName = document.getElementById('companyNameInput').value;

          // Create the query object
          const queryData = {
            name: name,
            Designation: designation,
            companyName: companyName,
            Contact: contact,
            email: email,
            website: website,
          };

          try {
            // Send POST request to API
            const response = await fetch(
              'https://backend.gaganahuja.com/api/v1/queries',
              {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify(queryData),
              }
            );

            // Parse response
            const result = await response.json();
            console.log(result);

            // Check if the query was created successfully
            if (response.ok) {
              alert('Query created successfully!');

              // Clear form fields after successful submission
              document.getElementById('emailInput').value = '';
              document.getElementById('nameInput').value = '';
              document.getElementById('designationInput').value = '';
              document.getElementById('contactInput').value = '';
              document.getElementById('websiteInput').value = '';
              document.getElementById('companyNameInput').value = '';
            } else {
              alert('Error creating query. Please try again.');
            }
          } catch (error) {
            console.error('Error:', error);
            alert('Error creating query. Please try again.');
          }
        });
    </script>
    <script>
      // Fetch the nav data from the API
      fetch('https://backend.gaganahuja.com/api/v1/navigation')
        .then((response) => response.json())
        .then((data) => {
          const navMenu = document.getElementById('nav-menu');

          // Iterate through the array of nav items
          data.forEach((item) => {
            if (item.isActive) {
              // Render only active items
              const listItem = document.createElement('li');
              const anchor = document.createElement('a');
              anchor.href = item.path; // Set the path
              anchor.textContent = item.label; // Set the label as text

              listItem.appendChild(anchor);
              navMenu.appendChild(listItem);
            }
          });
        })
        .catch((error) => {
          console.error('Error fetching navigation data:', error);
        });
    </script>
